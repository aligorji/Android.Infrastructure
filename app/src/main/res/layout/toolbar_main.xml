<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_vertical|left"
		android:orientation="horizontal">


		<TextView
			android:id="@+id/toolbar_refresh"
			android:text="{gmd_refresh}"
			style="@style/AppTheme.Toolbar.FontButton"/>

		<View
			android:layout_width="0dp"
			android:layout_height="1dp"
			android:layout_weight="1" />

		<TextView
			android:id="@id/toolbar_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="16dp"
			android:gravity="right|top"
			android:textAppearance="@style/TextAppearance.Iran"
			android:textColor="@color/color_text_primary_light"
			android:textSize="@dimen/fontsize_large" />


	</LinearLayout>

</RelativeLayout>